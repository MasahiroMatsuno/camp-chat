.message{data: {message: {id: message.id}}}
  .main-chat__message-data
    .main-chat__message-data__upper-info
      .main-chat__message-data__upper-info-talker
        = message.user.name
      .main-chat__message-data__upper-info-data
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main-chat__message-text
      - if message.content.present?
        %p.main-chat__message-text
          = message.content
      = image_tag message.image.url, class: 'main-chat__message-text__image' if message.image.present?    