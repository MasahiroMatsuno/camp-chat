.side-bar
  .side-bar__user-name
    .side-bar__box
      .side-bar__box__left
        = current_user.name
      .side-bar__box__right
        = link_to new_group_path, class: "side-bar__box__right--edit" do 
          = icon('far', 'edit', class: 'icon') 
        = link_to edit_user_path(current_user), class: "side-bar__box__right--set" do
          = icon("fas", "cog", class: 'icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to  group_messages_path(group) , class: "side-bar__group" do
          .side-bar__group--name
            = group.name
          .side-bar__group--message
            = group.show_last_message